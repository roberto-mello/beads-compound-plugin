{
  "name": "beads-compound",
  "version": "0.6.0",
  "description": "Persistent memory and compound knowledge tracking for Gemini CLI. Auto-recalls relevant knowledge at session start and captures learnings from beads comments.",
  "author": "Roberto Mello",
  "repository": "https://github.com/roberto-mello/beads-compound-plugin",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${GEMINI_EXTENSION_ROOT}/hooks/auto-recall.sh",
            "async": true
          }
        ]
      }
    ],
    "AfterTool": [
      {
        "matcher": "bash",
        "hooks": [
          {
            "type": "command",
            "command": "${GEMINI_EXTENSION_ROOT}/hooks/memory-capture.sh",
            "async": true
          }
        ]
      }
    ],
    "AfterAgent": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${GEMINI_EXTENSION_ROOT}/hooks/subagent-wrapup.sh"
          }
        ]
      }
    ]
  },
  "files": [
    "hooks/auto-recall.sh",
    "hooks/memory-capture.sh",
    "hooks/subagent-wrapup.sh",
    "hooks/provision-memory.sh",
    "hooks/recall.sh",
    "hooks/knowledge-db.sh"
  ]
}
